{
    "microservices": [
        {
            "name": "user-service",
            "stack": "spring-boot",
            "healthCheckPath": "/health",
            "commands": {
                "run": "mvn spring-boot:run"
            },
            "roles": [
                "user-service-role"
            ],
            "dbms": "mysql",
            "env": [
                {
                    "name": "ISTRUTTORIA_SERVICE_BASEURL",
                    "value": "https://entando.com"
                },
                {
                    "name": "LOG_LEVEL",
                    "value": "DEBUG"
                }
            ]
        }
    ],
    "microfrontends": [
        {
            "name": "user-ui",
            "customElement": "user-ui",
            "stack": "react",
            "type": "widget",
            "group": "free",
            "titles": {
                "en": "User Widget",
                "it": "User Widget"
            },
            "contextParams": [
                "page_code"
            ],
            "commands": {
                "run": "npm install && npm start"
            },
            "apiClaims": [
                {
                    "name": "int-api",
                    "type": "internal",
                    "serviceName": "user-service"
                }
            ],
            "params": [
                {
                    "name": "headerColor",
                    "description": "header color"
                }
            ],
            "configMfe": "user-ui-config"
        },
        {
            "name": "user-ui-config",
            "customElement": "user-ui-config",
            "stack": "react",
            "type": "widget-config",
            "group": "free",
            "commands": {
                "run": "npm install && PORT=3002 npm start"
            }
        }
    ],
    "name": "entando-codemotion-bundle",
    "description": "This is an awesome bundle demonstrating the power of Entando bundles",
    "version": "1.0.3",
    "type": "bundle",
    "svc": [
        "keycloak",
        "mysql"
    ],
    "global": {
        "nav": [
            {
                "label": {
                    "en": "Entando Developers",
                    "it": "Entando Developers"
                },
                "target": "external",
                "url": "https://developer.entando.com/"
            }
        ]
    }
}
